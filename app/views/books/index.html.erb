<h1>Books</h1>

<% @books.each do |book| %>
  <h3>name: <%= book.name %></h3>
  <p>by: <%= book.author %></p>
  <p>id: <%= book.id %></p>
  <p>read: <%= book.read %></p>
  <p>read time: <%= book.read_time %></p>
  <p>bookshelf id: <%= book.bookshelf_id %></p>
  <p>created: <%= book.created_at %></p>
  <p>updated: <%= book.updated_at %></p>
  <p><a href="/books/<%= book.id %>/edit">edit <%= book.name %></a></p>
<% end %>

<%= form_with url: "/books", method: :get, local: true do |form| %>
  <%= form.label 'enter the minimum number of read time you want' %>
  <%= form.number_field :min_time %>
  <%= form.submit 'Only return records with more than number of read time' %>
<% end %>
